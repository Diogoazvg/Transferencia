<% if @confirm.errors.any? %>
  <div id="error_explanation">
    <h2>Infelizmente não foi possível completar a ação pois o formulário possui os seguintes erros:</h2>
    <ul>
      <% @confirm.errors.full_messages.each do |message|%>
        <li><%= message %> </li>
    <% end %>
  </ul>
  </div>
  <% end %>

<%= form_for @confirm do |f| %>
  <p>
    <%= f.label "Sim" %><br>
    <%= f.radio_button :option, :option %><br>
  </p>
  <p>
    <%= f.label "Não" %><br>  
    <%= f.radio_button :option, :option %><br>
  </p>
  <p>
    <%= f.label :justification %><br>
    <%= f.text_area :justification %>

  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>