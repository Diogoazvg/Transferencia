<section><h2>Verificação de Pendências</h2></section>

    <body>
        <section>
            <article>
                <fieldset>
                    <p>
                        <%= form_tag(finds_search_path, :method => :post) do %>
                          <p><%= label_tag :MATRICULA %></p>
                          <p><%= text_field_tag 'search_matricula', nil, placeholder: 'Insira aqui...' %>
                          <p class='help'>
                            Insira o número de matrícula contido na sua carteirinha de aluno.
                          </p>
                          <radio-button>
                            <%= radio_button_tag 'search_condicao',false, :checked => true%>
                          </radio-button>
                          <button>
                            <%= image_submit_tag("botao_proximo.png")%>
                          </button>
                        <% end %>
                    </p>
                </fieldset>
            </article>
        </section>
    </body>
